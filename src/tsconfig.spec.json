{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "../out-tsc/spec",
    "module": "commonjs",
    "target": "ES2022",
    "baseUrl": "",
    "types": [
      "jasmine",
      "node"
    ],
    "useDefineForClassFields": false
  },
  "include": [
    "**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
