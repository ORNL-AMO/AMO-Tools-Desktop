{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "outDir": "../out-tsc/app",
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": "",
    "types": ["node"],
    "useDefineForClassFields": false
  },
  "files": [ 
    "./main.ts", 
    "./polyfills.ts" 
  ], 
  "include": [ 
    "./**/*.d.ts" 
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}